<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.BeeHome.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:gravity="center"
            android:id="@+id/toolbar_hoa_don"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/tim_500"
            app:menu="@menu/menu_toolbar_right"
            app:popupTheme="@style/Theme.BeeHome.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_main" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomnav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        android:animateLayoutChanges="true"
        app:menu="@menu/main"
        app:labelVisibilityMode="unlabeled"
        android:elevation="2dp"
        app:itemRippleColor="@color/tim_50"
        android:background="@drawable/corners_botnav"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_selected_botnav"
        tools:layout_editor_absoluteX="-16dp" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>