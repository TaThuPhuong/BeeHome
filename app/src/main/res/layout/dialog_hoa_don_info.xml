<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/titleThemKhoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="15dp"
        android:text="Chi Tiết Hóa Đơn"
        android:background="@color/tim_400"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_idPhongHD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="P101"
            android:textColor="#3A3A3A"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_thangHD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="HĐ Tháng: 04-2022"
            android:textColor="#3A3A3A"
            android:textSize="16dp"

            />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Hạn HĐ:"
            android:textColor="#3A3A3A"
            android:textSize="16dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/tv_hanHD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="4-1-2002"
            android:textColor="#3A3A3A"
            android:textSize="16dp"
            android:layout_weight="1"

            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#C5C5C5" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Tiền phòng:"
            android:textColor="#3A3A3A"
            android:textSize="16dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/tv_tienPhongHD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="2.400.000"
            android:textColor="#3A3A3A"
            android:textSize="16dp"
            android:layout_weight="1"

            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Tiền điện:"
            android:textColor="#3A3A3A"
            android:textSize="16dp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_tienDien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="240.000"
            android:textColor="#3A3A3A"
            android:textSize="16dp"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Tiền nước:"
            android:textColor="#3A3A3A"
            android:textSize="16dp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_tienNuoc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="240.000"
            android:textColor="#3A3A3A"
            android:textSize="16dp"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Dịch vụ chung:"
            android:textColor="#3A3A3A"
            android:textSize="16dp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_tienDVCHung"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="340.000"
            android:textColor="#3A3A3A"
            android:textSize="16dp"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Giảm giá:"
            android:textColor="#3A3A3A"
            android:textSize="16dp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_giamGiaHD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="370.000"
            android:textColor="#3A3A3A"
            android:textSize="16dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#C5C5C5" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Tổng:"
            android:textStyle="bold"
            android:textColor="#3A3A3A"
            android:textSize="16dp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_tongHD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="2.200.000"
            android:textColor="#3A3A3A"
            android:textSize="18dp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#C5C5C5" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Trạng thái:"
            android:textColor="#3A3A3A"
            android:textSize="16dp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_trangThaiHD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Đã thanh toán"
            android:textColor="#3A3A3A"
            android:textSize="16dp"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Ngày thanh toán:"
            android:textColor="#3A3A3A"
            android:textSize="16dp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_ngayThanhToanHD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="12-12-2022"
            android:textColor="#3A3A3A"
            android:textSize="16dp"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="#C5C5C5" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="30dp"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="Ghi chú:"
            android:textColor="#3A3A3A"
            android:textSize="16dp"
            android:layout_weight="1"
            />

        <TextView
            android:layout_weight="1"
            android:id="@+id/tv_ghiChuHD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="abc"
            android:textColor="#3A3A3A"
            android:textSize="16dp"
            />
    </LinearLayout>


</LinearLayout>