<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Thông Tin Hóa đơn"
            android:textStyle="bold"
            android:textSize="22dp"
            android:gravity="center"
            android:background="@color/purple_200"
            android:padding="10dp"
            android:textColor="@color/white"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/img_phong" />

                <TextView
                    android:id="@+id/tv_idPhongHD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="P101"
                    android:textColor="#3A3A3A"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_thangHD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="5dp"
                android:text="04-2022"
                android:textColor="#3A3A3A"
                android:textSize="14dp"
                android:textStyle="bold"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="5dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Tiền phòng"
                android:textColor="#3A3A3A"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_tienPhongHD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="185dp"
                android:text="2.400.000 đ"
                android:textColor="#3A3A3A"
                android:textSize="12dp"
                android:textStyle="bold"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:paddingLeft="5dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Tiền dịch vụ"
                android:textColor="#3A3A3A"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_tienDvHD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="185dp"
                android:text="600.000 đ"
                android:textColor="#3A3A3A"
                android:textSize="12dp"
                android:textStyle="bold"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Tiền điện"
                android:textColor="#3A3A3A"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/tv_tienDien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="185dp"
                android:text="600.000 đ"
                android:textColor="#3A3A3A"
                android:textSize="10dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Tiền nước"
                android:textColor="#3A3A3A"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/tv_tienNuoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="185dp"
                android:text="600.000 đ"
                android:textColor="#3A3A3A"
                android:textSize="10dp"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Dịch vụ chung"
                android:textColor="#3A3A3A"
                android:textSize="9dp" />

            <TextView
                android:id="@+id/tv_tienDVCHung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="185dp"
                android:text="600.000 đ"
                android:textColor="#3A3A3A"
                android:textSize="10dp"

                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:paddingLeft="5dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Giảm giá"
                android:textColor="#3A3A3A"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_giamGiaHD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="185dp"
                android:text="0 đ"
                android:textColor="#F44336"
                android:textSize="12dp"
                android:textStyle="bold"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:paddingLeft="5dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Tổng hóa đơn"
                android:textColor="#3A3A3A"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_tongHD"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="200dp"
                android:text="3.000.000 đ"
                android:textColor="@color/do_nhat"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            android:paddingLeft="5dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Hạn hóa đơn"
                android:textColor="#3A3A3A"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_hanHD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="185dp"
                android:text="05-2022"
                android:textColor="#3A3A3A"
                android:textSize="12dp"
                android:textStyle="bold"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:paddingLeft="5dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Trạng thái"
                android:textColor="#3A3A3A"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_trangThaiHD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="185dp"
                android:text="Chưa thanh toán"
                android:textColor="#3A3A3A"
                android:textSize="12dp"
                android:textStyle="bold"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:paddingLeft="5dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Ngày thanh toán"
                android:textColor="#3A3A3A"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_ngayThanhToanHD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="185dp"
                android:text="01/05/2022"
                android:textColor="#3A3A3A"
                android:textSize="12dp"
                android:textStyle="bold"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:paddingLeft="5dp">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Ghi chú"
                android:textColor="#3A3A3A"
                android:textSize="12dp" />

            <TextView
                android:paddingRight="2dp"
                android:id="@+id/tv_ghiChuHD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="185dp"
                android:text=""
                android:textColor="#3A3A3A"
                android:textSize="12dp"
                android:textStyle="bold"

                />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>