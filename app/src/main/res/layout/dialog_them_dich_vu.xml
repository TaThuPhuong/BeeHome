<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_rd">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm dịch vụ"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:padding="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="15dp"
        android:orientation="vertical"
        android:background="@color/white">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên dịch vụ:"
            android:textSize="16dp"/>
        
        <EditText
            android:textSize="16sp"
            android:id="@+id/ed_tenDichVu"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/background_edttext2"
            android:hint="   Điện, nước, vệ sinh,..."
            android:layout_marginTop="7dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thu phí dựa trên:"
            android:textSize="16dp"/>

        <EditText
            android:id="@+id/ed_chiSo"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/background_edttext2"
            android:hint="   Lũy tiến theo chỉ số, phòng, người, số lần"
            android:layout_marginTop="7dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá dịch vụ:"
            android:textSize="16dp"/>

        <EditText
            android:id="@+id/ed_giaDichVu"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:layout_height="30dp"
            android:inputType="number"
            android:background="@drawable/background_edttext2"
            android:hint="   0đ"
            android:layout_marginTop="7dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btn_themDichVu"
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Thêm"
                android:textAllCaps="false"
                android:background="@drawable/background_btn_login"
                android:layout_marginRight="25dp"
                android:textSize="18sp"/>
            <Button
                android:id="@+id/btn_huy"
                android:layout_width="1dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/background_btn_login"
                android:text="Hủy"
                android:textAllCaps="false"
                android:textSize="18sp"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thêm dịch vụ"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:padding="15dp"/>
</LinearLayout>