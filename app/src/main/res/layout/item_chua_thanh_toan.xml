<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_tongHD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/do_nhat"
        android:text="3.000.000 đ"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_gravity="top|right" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/img_phong"
            />
        <TextView
            android:id="@+id/tv_idPhongHD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:text="P101"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#3A3A3A"
            />

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Tiền phòng"
            android:textSize="15dp"
            android:textColor="#3A3A3A"
            />
        <TextView
            android:id="@+id/tv_tienPhongHD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.400.000 đ"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="#3A3A3A"
            android:layout_marginLeft="190dp"

            />


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Tiền dịch vụ"
            android:textSize="15dp"
            android:textColor="#3A3A3A"
            />
        <TextView
            android:id="@+id/tv_tienDvHD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="600.000 đ"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="#3A3A3A"
            android:layout_marginLeft="190dp"

            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Giảm giá"
            android:textSize="15dp"
            android:textColor="#3A3A3A"
            />
        <TextView
            android:id="@+id/tv_giamGiaHD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 đ"
            android:textStyle="bold"
            android:textSize="16dp"
            android:textColor="#F44336"
            android:layout_marginLeft="190dp"

            />
    </LinearLayout>




</LinearLayout>

