<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Sửa Báo Cáo Sự Cố"
        android:textStyle="bold"
        android:textSize="24dp"
        android:gravity="center"
        android:background="@color/tim_500"
        android:padding="15dp"
        android:textColor="@color/white"/>



    <TextView
        android:id="@+id/tv_p_d"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="12356"
        android:textSize="18dp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:paddingLeft="17dp"
        android:textColor="@color/white"
        android:background="@drawable/bg_tv_dsc"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ed_mota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/tim_300"
        app:boxStrokeColor="@color/tim_300"
        app:hintTextColor="@color/tim_300"
        android:hint="Mô tả sự cố"
        app:counterEnabled="true"
        app:counterMaxLength="30"
        app:boxCornerRadiusBottomEnd="16dp"
        app:boxCornerRadiusBottomStart="16dp"
        app:boxCornerRadiusTopEnd="16dp"
        app:endIconMode="clear_text"
        app:boxCornerRadiusTopStart="16dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="31"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ed_ngaybaocao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="@color/tim_300"
        app:boxStrokeColor="@color/tim_300"
        app:hintTextColor="@color/tim_300"
        app:startIconDrawable="@drawable/ic_day"
        android:hint="Ngày báo cáo"
        app:boxCornerRadiusBottomEnd="16dp"
        app:boxCornerRadiusBottomStart="16dp"
        app:boxCornerRadiusTopEnd="16dp"
        app:boxCornerRadiusTopStart="16dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:enabled="false"
            />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/btn_bc"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Sửa"
            android:textSize="20dp"
            android:padding="10dp"
            android:backgroundTint="@color/tim_500"
            android:shadowRadius="@integer/google_play_services_version"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btn_cancel_bc"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:textSize="20dp"
            android:padding="10dp"
            android:backgroundTint="@color/tim_500"
            android:shadowRadius="@integer/google_play_services_version"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</LinearLayout>