<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Thêm Hợp Đồng"
        android:textStyle="bold"
        android:textSize="24dp"
        android:gravity="center"
        android:background="@color/tim_400"
        android:padding="15dp"
        android:textColor="@color/white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phòng"
            android:layout_marginTop="7dp"
            android:layout_marginStart="35dp"
            android:textSize="16dp"/>

        <Spinner
            android:background="@drawable/style_spinner_hd"
            android:id="@+id/sp_hd_phong"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="1dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>

        <TextView
            android:id="@+id/tv_er_phong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:textColor="@color/red"
            android:textSize="0dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Người Thuê"
            android:layout_marginTop="7dp"
            android:layout_marginStart="35dp"
            android:textSize="16dp"/>

        <Spinner
            android:background="@drawable/style_spinner_hd"

            android:id="@+id/sp_hd_tvien"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="1dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>
        <TextView
            android:id="@+id/tv_er_ngthue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="0dp"
            android:layout_marginStart="35dp"
            android:textColor="@color/red"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kỳ Hạn"
            android:layout_marginTop="7dp"
            android:layout_marginStart="35dp"
            android:textSize="16dp"/>


        <Spinner
            android:background="@drawable/style_spinner_hd"
            android:id="@+id/sp_hd_kyhan"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="1dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ed_ngaykyhd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="@color/tim_300"
            app:boxStrokeColor="@color/tim_300"
            app:hintTextColor="@color/tim_300"
            app:startIconDrawable="@drawable/ic_day"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusTopStart="16dp"
            android:hint="Ngày Ký"
            app:errorEnabled="true"

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="datetime"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ed_ngaybd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="@color/tim_300"
            app:boxStrokeColor="@color/tim_300"
            app:hintTextColor="@color/tim_300"
            android:hint="Ngày Bắt Đầu"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusTopStart="16dp"
            app:errorEnabled="true"

            app:startIconDrawable="@drawable/ic_day"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ed_ngaykt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="@color/tim_300"
            app:boxStrokeColor="@color/tim_300"
            app:hintTextColor="@color/tim_300"
            android:hint="Ngày Kết Thúc"
            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:boxCornerRadiusTopStart="16dp"
            app:errorEnabled="true"

            app:startIconDrawable="@drawable/ic_day"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:enabled="false"

                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/ed_songuoithue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:backgroundTint="@color/tim_300"
            app:boxStrokeColor="@color/tim_300"
            app:hintTextColor="@color/tim_300"
            android:hint="Số người thuê"

            app:boxCornerRadiusBottomEnd="16dp"
            app:boxCornerRadiusBottomStart="16dp"
            app:boxCornerRadiusTopEnd="16dp"
            app:errorEnabled="true"
            app:startIconDrawable="@drawable/ic_user"
            app:boxCornerRadiusTopStart="16dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="1"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thêm"
            android:textSize="20dp"
            android:padding="10dp"
            android:backgroundTint="@color/tim_300"
            android:shadowRadius="@integer/google_play_services_version"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp"/>

    </LinearLayout>

    </ScrollView>
</LinearLayout>